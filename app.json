{
  "expo": {
    "name": "pedismart2",
    "slug": "pedismart2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pedismart2",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "PediSmart needs your location to show nearby drivers and help you book rides.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "PediSmart uses your location to update trips in real time.",
        "NSLocationAlwaysUsageDescription": "PediSmart uses your location to update trips in real time."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
        "expo-secure-store",
        [
          "@rnmapbox/maps",
          {
            "RNMapboxMapsDownloadToken": "${EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN}",
            "android": {
              "accessToken": "${EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN}"
            },
            "ios": {
              "accessToken": "${EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN}"
            }
          }
        ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
